{
  "compilerOptions": {
    "target": "es2020",  
    "experimentalDecorators": true ,
    "emitDecoratorMetadata": true,               
    "module": "commonjs",                     
    "baseUrl": "./",                                    
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true, 
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,  
    "strictPropertyInitialization": false ,
    "skipLibCheck": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
